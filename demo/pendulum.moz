include ModelyzeDAE


def g = 9.81

def Pendulum(m:Real,l:Real,a:Real)={
    def x,y,T:Real;
    init x (l*sin(a));
    init y (-l*cos(a));
    -T*x/l = m*x'';
    -T*y/l - m*g = m*y'';
    x^2. + y^2. = l^2.;
    probe "x" = x;
    probe "y" = y;
}



def pi = 3.1415

def main =
   printsim(Pendulum(5.0, 3.0, 45.0*pi/180.0), 0.01, 10.0)
